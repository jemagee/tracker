<header>
	<h1><%= @certifier.organization %></h1>
</header>

<div id="certification">
	<h3><%= @certifier.certification.name %></h3>
</div>

<%= link_to "Edit #{@certifier.organization}", edit_certifier_path(@certifier) %>
<%= link_to "Delete #{@certifier.organization}", certifier_path(@certifier), method: :delete, data: {confirm: "Are you sure you want to delete this certifying organization?"} %>