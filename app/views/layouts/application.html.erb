<!DOCTYPE html>
<html>
  <head>
    <title>Tracker</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div clas="navbar-header">
        <buton type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
          <span class="sr-only">Toggle Navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </buton>
        <%= link_to "Certification Tracker", root_path, class: "navbar-brand" %>
      </div>

      <div class="collapse navbar-collapse" id="navbar-collapse">
        <ul class="nav navbar-nav">
          <li><%= link_to "Items", items_path %></li>
          <li><%= link_to "Vendors", vendors_path %></li>
        </ul>
      </div>
    </div>
  </nav>
  <body>
    <div class="container">
     <% if !flash.empty? %>
      <div class="flash row">
       	<% flash.each do |key, value| %>
       		<%= content_tag(:p, id: key, class: "alert alert-#{key}") do %>
            <%= value %>
          <% end %>
       <% end %>
      </div>
    <% end %>
    <%= yield %>
  </div>
  </body>
</html>
