<!DOCTYPE html>
<html>
  <head>
    <title>Tracker</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
     <% if !flash.empty? %>
      <div class="flash row">
       	<% flash.each do |key, value| %>
       		<%= content_tag(:p, id: key, class: "alert alert-#{key}") do %>
            <%= value %>
          <% end %>
       <% end %>
      </div>
    <% end %>
    <%= yield %>
  </div>
  </body>
</html>
